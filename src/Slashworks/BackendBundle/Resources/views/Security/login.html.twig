<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>{% block pagetitle %}{% endblock %}</title>
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Titillium+Web:400,700">
    {#<link href="css/bootstrap.min.css" rel="stylesheet">#}
    {#<link href="css/plugins/metisMenu/metisMenu.min.css" rel="stylesheet">#}
    {#<link href="css/sb-admin-2.css" rel="stylesheet">#}
    {#<link href="font-awesome-4.1.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">#}

    {% stylesheets
    '@SlashworksBackendBundle/Resources/public/css/bootstrap.min.css'
    '@SlashworksBackendBundle/Resources/public/css/sb-admin-2.css'
    output='css/compiled/main.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    {% block css_head %}{% endblock %}
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    {% block js_head %}{% endblock %}
</head>
<body class="control">
    <div id="wrapper">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading login">
                        <a class="navbar-brand logo" href="/">

                            {% image '@SlashworksAppBundle/Resources/public/images/logo.png' %}
                            <img src="{{ asset_url }}" alt="Example" />
                            {% endimage %}
                            <div class="floatblock">
                                {% block app_title %}
                                    <span class="name">control</span>
                                    <span class="version">Contao Monitoring</span>
                                {% endblock %}
                            </div>

                        </a>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="{{ path("login_check") }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <fieldset>
                                <div class="form-group">
                                    <label for="_username">Nutzername:</label>
                                    <input class="form-control" name="_username" type="text" autofocus value="{{ last_username }}">
                                </div>
                                <div class="form-group">
                                    <label for="_username">Passwort:</label>
                                    <input class="form-control" name="_password" type="password" value="">
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" class="btn btn-lg btn-success" value="{{ "button.login.dologin"|trans }}">
                            </fieldset>
                        </form>
                        {% if error %}
                            <div>{{ error.message }}</div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

