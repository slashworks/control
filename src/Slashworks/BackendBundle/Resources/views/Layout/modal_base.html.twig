<div class="modal fade" id="{% block modal_id %}sw-modal{% endblock %}" tabindex="-1" role="dialog" aria-labelledby="{% block modal_label %}{% endblock %}" aria-hidden="true">
    <div class="modal-dialog {% block modal_size_class %}modal-lg{% endblock %}">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">{% block modal_title %}{% endblock %}</h4>
            </div>
            <div class="modal-body">
                {% block modal_content %}{% endblock %}
            </div>
            <div class="modal-footer">
                {% block modal_footer %}
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{"modal.close"|trans}}</button>
                {% endblock %}
            </div>
        </div>
    </div>
</div>